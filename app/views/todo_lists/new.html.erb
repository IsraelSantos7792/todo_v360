<div class='card-header'>
  <div class='row'>
    <div class='col-1'>
      <%= link_to todo_lists_path, class: 'btn btn-dark' do %>
        <i class="bi bi-arrow-return-left"></i>
      <%end%>
    </div>
    <div class='col-11'>
      <div class='d-flex justify-content-between'>
        <div>
          <h5 class='m-0 text-dark'>
            Nova Lista
          </h5>
        </div>
      </div>
    </div>
  </div>
</div>
<div class='card-body'>
  <%= form_with(model: @todo_list) do |f| %>
    <div class="input-group mb-4">
      <%= f.text_field :title, class: 'form-control', placeholder: 'Adicione uma nova lista'%>
      <div class='input-group-append'>
        <%= f.submit "Adicionar", class: 'btn btn-primary input-group-btn' %>
      </div>
    </div>
  <% end %>
</div>